<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="addHealthDeclarationViewModel"
            type="com.android.covidsafe.ui.main.home.healthdeclaration.add.AddHealthDeclarationViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_small">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="?attr/actionBarSize"
            app:layout_constraintBottom_toTopOf="@+id/btn_add_health_declaration_send"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/health_declaration_title"
                    android:textAllCaps="true"
                    android:textAppearance="?attr/textAppearanceDisplaySmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/add_health_declaration_advise"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="@color/red_500" />

                <com.google.android.material.card.MaterialCardView
                    style="?attr/materialCardViewElevatedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_small">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="@string/add_health_declaration_full_name"
                            android:textAppearance="?attr/textAppearanceTitleMedium" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/il_add_health_declaration_full_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxCornerRadiusBottomEnd="@dimen/radius_default"
                            app:boxCornerRadiusBottomStart="@dimen/radius_default"
                            app:boxCornerRadiusTopEnd="@dimen/radius_default"
                            app:boxCornerRadiusTopStart="@dimen/radius_default"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/it_add_health_declaration_full_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_enter_content"
                                android:inputType="textCapWords"
                                android:text="@={addHealthDeclarationViewModel.healthDeclarationRequest.fullName}"
                                android:textAppearance="?attr/textAppearanceBodyMedium" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_marginBottom="5dp"
                            android:text="@string/add_health_declaration_year_of_birth"
                            android:textAppearance="?attr/textAppearanceTitleMedium" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/il_add_health_declaration_year_of_birth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxCornerRadiusBottomEnd="@dimen/radius_default"
                            app:boxCornerRadiusBottomStart="@dimen/radius_default"
                            app:boxCornerRadiusTopEnd="@dimen/radius_default"
                            app:boxCornerRadiusTopStart="@dimen/radius_default"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/it_add_health_declaration_year_of_birth"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_enter_content"
                                android:maxLength="4"
                                android:singleLine="true"
                                android:text="@={addHealthDeclarationViewModel.healthDeclarationRequest.yearOfBirth}"
                                android:textAppearance="?attr/textAppearanceBodyMedium" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_marginBottom="5dp"
                            android:text="@string/add_health_declaration_identification"
                            android:textAppearance="?attr/textAppearanceTitleMedium" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/il_add_health_declaration_identification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxCornerRadiusBottomEnd="@dimen/radius_default"
                            app:boxCornerRadiusBottomStart="@dimen/radius_default"
                            app:boxCornerRadiusTopEnd="@dimen/radius_default"
                            app:boxCornerRadiusTopStart="@dimen/radius_default"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/it_add_health_declaration_identification"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_enter_content"
                                android:singleLine="true"
                                android:text="@={addHealthDeclarationViewModel.healthDeclarationRequest.identification}"
                                android:textAppearance="?attr/textAppearanceBodyMedium" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:text="@string/add_health_declaration_gender"
                            android:textAppearance="?attr/textAppearanceTitleMedium" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="@{addHealthDeclarationViewModel.healthDeclarationRequest.gender}"
                                android:onClick="@{() -> addHealthDeclarationViewModel.healthDeclarationRequest.setGender(true)}"
                                android:text="@string/add_health_declaration_male" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="64dp"
                                android:checked="@{!addHealthDeclarationViewModel.healthDeclarationRequest.gender}"
                                android:onClick="@{() -> addHealthDeclarationViewModel.healthDeclarationRequest.setGender(false)}"
                                android:text="@string/add_health_declaration_female" />
                        </RadioGroup>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="@string/add_health_declaration_nationality"
                            android:textAppearance="?attr/textAppearanceTitleMedium" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/il_add_health_declaration_nationality"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxCornerRadiusBottomEnd="@dimen/radius_default"
                            app:boxCornerRadiusBottomStart="@dimen/radius_default"
                            app:boxCornerRadiusTopEnd="@dimen/radius_default"
                            app:boxCornerRadiusTopStart="@dimen/radius_default"
                            app:hintEnabled="false">

                            <AutoCompleteTextView
                                android:id="@+id/at_add_health_declaration_nationality"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_select"
                                android:inputType="none"
                                android:text="@{addHealthDeclarationViewModel.nationality}"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                app:nationalityAdapter="@{addHealthDeclarationViewModel.nationalityList}" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_marginBottom="5dp"
                            android:text="@string/add_health_declaration_province"
                            android:textAppearance="?attr/textAppearanceTitleMedium" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/il_add_health_declaration_province"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxCornerRadiusBottomEnd="@dimen/radius_default"
                            app:boxCornerRadiusBottomStart="@dimen/radius_default"
                            app:boxCornerRadiusTopEnd="@dimen/radius_default"
                            app:boxCornerRadiusTopStart="@dimen/radius_default"
                            app:hintEnabled="false">

                            <AutoCompleteTextView
                                android:id="@+id/at_add_health_declaration_province"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_select"
                                android:inputType="none"
                                android:text="@{addHealthDeclarationViewModel.province}"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                app:subnationalAdapter="@{addHealthDeclarationViewModel.provinceList}" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_marginBottom="5dp"
                            android:text="@string/add_health_declaration_district"
                            android:textAppearance="?attr/textAppearanceTitleMedium" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/il_add_health_declaration_district"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxCornerRadiusBottomEnd="@dimen/radius_default"
                            app:boxCornerRadiusBottomStart="@dimen/radius_default"
                            app:boxCornerRadiusTopEnd="@dimen/radius_default"
                            app:boxCornerRadiusTopStart="@dimen/radius_default"
                            app:hintEnabled="false">

                            <AutoCompleteTextView
                                android:id="@+id/at_add_health_declaration_district"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_select"
                                android:inputType="none"
                                android:text="@{addHealthDeclarationViewModel.district}"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                app:subnationalAdapter="@{addHealthDeclarationViewModel.districtList}" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_marginBottom="5dp"
                            android:text="@string/add_health_declaration_ward"
                            android:textAppearance="?attr/textAppearanceTitleMedium" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/il_add_health_declaration_ward"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxCornerRadiusBottomEnd="@dimen/radius_default"
                            app:boxCornerRadiusBottomStart="@dimen/radius_default"
                            app:boxCornerRadiusTopEnd="@dimen/radius_default"
                            app:boxCornerRadiusTopStart="@dimen/radius_default"
                            app:hintEnabled="false">

                            <AutoCompleteTextView
                                android:id="@+id/at_add_health_declaration_ward"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_select"
                                android:inputType="none"
                                android:text="@{addHealthDeclarationViewModel.ward}"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                app:subnationalAdapter="@{addHealthDeclarationViewModel.wardList}" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_marginBottom="5dp"
                            android:text="@string/add_health_declaration_address"
                            android:textAppearance="?attr/textAppearanceTitleMedium" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/il_add_health_declaration_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxCornerRadiusBottomEnd="@dimen/radius_default"
                            app:boxCornerRadiusBottomStart="@dimen/radius_default"
                            app:boxCornerRadiusTopEnd="@dimen/radius_default"
                            app:boxCornerRadiusTopStart="@dimen/radius_default"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/it_add_health_declaration_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_enter_content"
                                android:singleLine="true"
                                android:text="@={addHealthDeclarationViewModel.healthDeclarationRequest.address}"
                                android:textAppearance="?attr/textAppearanceBodyMedium" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_marginBottom="5dp"
                            android:text="@string/add_health_declaration_phone_number"
                            android:textAppearance="?attr/textAppearanceTitleMedium" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/il_add_health_declaration_phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxCornerRadiusBottomEnd="@dimen/radius_default"
                            app:boxCornerRadiusBottomStart="@dimen/radius_default"
                            app:boxCornerRadiusTopEnd="@dimen/radius_default"
                            app:boxCornerRadiusTopStart="@dimen/radius_default"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/it_add_health_declaration_phone_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_enter_content"
                                android:inputType="phone"
                                android:text="@={addHealthDeclarationViewModel.healthDeclarationRequest.phoneNumber}"
                                android:textAppearance="?attr/textAppearanceBodyMedium" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_marginBottom="5dp"
                            android:text="@string/add_health_declaration_email"
                            android:textAppearance="?attr/textAppearanceTitleMedium" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/il_add_health_declaration_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxCornerRadiusBottomEnd="@dimen/radius_default"
                            app:boxCornerRadiusBottomStart="@dimen/radius_default"
                            app:boxCornerRadiusTopEnd="@dimen/radius_default"
                            app:boxCornerRadiusTopStart="@dimen/radius_default"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/it_add_health_declaration_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_enter_content"
                                android:inputType="textEmailAddress"
                                android:text="@={addHealthDeclarationViewModel.healthDeclarationRequest.email}"
                                android:textAppearance="?attr/textAppearanceBodyMedium" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="?attr/materialCardViewElevatedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_small">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:justificationMode="inter_word"
                            android:text="@string/add_health_declaration_visit"
                            android:textAppearance="?attr/textAppearanceTitleMedium" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="@{addHealthDeclarationViewModel.healthDeclarationRequest.visit}"
                                android:onClick="@{() -> addHealthDeclarationViewModel.healthDeclarationRequest.setVisit(true)}"
                                android:text="@string/add_health_declaration_yes" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="64dp"
                                android:checked="@{!addHealthDeclarationViewModel.healthDeclarationRequest.visit}"
                                android:onClick="@{() -> addHealthDeclarationViewModel.healthDeclarationRequest.setVisit(false)}"
                                android:text="@string/add_health_declaration_no" />
                        </RadioGroup>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/il_add_health_declaration_visit_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="@{addHealthDeclarationViewModel.healthDeclarationRequest.visit ? View.VISIBLE : View.GONE}"
                            app:boxCornerRadiusBottomEnd="@dimen/radius_default"
                            app:boxCornerRadiusBottomStart="@dimen/radius_default"
                            app:boxCornerRadiusTopEnd="@dimen/radius_default"
                            app:boxCornerRadiusTopStart="@dimen/radius_default"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/it_add_health_declaration_visit_details"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:gravity="top"
                                android:hint="@string/hint_enter_content"
                                android:inputType="textMultiLine"
                                android:text="@={addHealthDeclarationViewModel.healthDeclarationRequest.visitDetail}"
                                android:textAppearance="?attr/textAppearanceBodyMedium" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="?attr/materialCardViewElevatedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_small">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:justificationMode="inter_word"
                            android:text="@string/add_health_declaration_symptoms"
                            android:textAppearance="?attr/textAppearanceTitleMedium" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="@{addHealthDeclarationViewModel.healthDeclarationRequest.symptoms}"
                                android:onClick="@{() -> addHealthDeclarationViewModel.healthDeclarationRequest.setSymptoms(true)}"

                                android:text="@string/add_health_declaration_yes" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="64dp"
                                android:checked="@{!addHealthDeclarationViewModel.healthDeclarationRequest.symptoms}"
                                android:onClick="@{() -> addHealthDeclarationViewModel.healthDeclarationRequest.setSymptoms(false)}"
                                android:text="@string/add_health_declaration_no" />
                        </RadioGroup>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/il_add_health_declaration_symptoms_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="@{addHealthDeclarationViewModel.healthDeclarationRequest.symptoms ? View.VISIBLE : View.GONE}"
                            app:boxCornerRadiusBottomEnd="@dimen/radius_default"
                            app:boxCornerRadiusBottomStart="@dimen/radius_default"
                            app:boxCornerRadiusTopEnd="@dimen/radius_default"
                            app:boxCornerRadiusTopStart="@dimen/radius_default"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/it_add_health_declaration_symptoms_details"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:gravity="top"
                                android:hint="@string/hint_enter_content"
                                android:inputType="textMultiLine"
                                android:text="@={addHealthDeclarationViewModel.healthDeclarationRequest.symptomsDetail}"
                                android:textAppearance="?attr/textAppearanceBodyMedium" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="?attr/materialCardViewElevatedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_small">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="@string/add_health_declaration_contact"
                            android:textAppearance="?attr/textAppearanceTitleMedium" />

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:stretchColumns="0">

                            <!-- Table Heading -->

                            <TableRow android:background="?attr/colorPrimary">

                                <View
                                    android:layout_width="170dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center" />

                                <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="10sp"
                                    android:text="@string/add_health_declaration_yes"
                                    android:textAppearance="?attr/textAppearanceTitleSmall"
                                    android:textColor="@android:color/white" />

                                <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="10sp"
                                    android:text="@string/add_health_declaration_no"
                                    android:textAppearance="?attr/textAppearanceTitleSmall"
                                    android:textColor="@android:color/white" />

                            </TableRow>

                            <!-- Table Data -->

                            <TableRow>

                                <TextView
                                    android:layout_width="170dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="10sp"
                                    android:text="@string/add_health_declaration_contact_sick_people" />

                                <RadioGroup
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_span="2"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:layout_width="31.5dp"
                                        android:layout_height="wrap_content"
                                        android:checked="@{addHealthDeclarationViewModel.healthDeclarationRequest.contactSickPeople}"
                                        android:onClick="@{() -> addHealthDeclarationViewModel.healthDeclarationRequest.setContactSickPeople(true)}" />

                                    <RadioButton
                                        android:layout_width="31.5dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="36dp"
                                        android:checked="@{!addHealthDeclarationViewModel.healthDeclarationRequest.contactSickPeople}"
                                        android:onClick="@{() -> addHealthDeclarationViewModel.healthDeclarationRequest.setContactSickPeople(false)}" />
                                </RadioGroup>

                            </TableRow>

                            <TableRow>

                                <TextView
                                    android:layout_width="170dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="10sp"
                                    android:text="@string/add_health_declaration_contact_epidemic_area" />

                                <RadioGroup
                                    android:layout_width="0dp"
