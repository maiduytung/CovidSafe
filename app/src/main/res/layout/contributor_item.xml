<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="contributor"
            type="com.android.covidsafe.vo.Contributor" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">


            <ImageView
                app:imageUrl="@{contributor.avatarUrl}"
                android:id="@+id/imageView"
                android:contentDescription="@string/a11y_contributor_avatar"
                android:layout_width="@dimen/size_image_large"
                android:layout_height="@dimen/size_icon_large"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                app:transitionName="@{contributor.login}"
                app:srcCompat="@android:drawable/btn_star"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/margin_small"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_small"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/margin_small" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{contributor.login}"
                tools:text="Yigit Boyar"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginStart="@dimen/margin_small"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="@dimen/margin_small" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>